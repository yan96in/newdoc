                android:background="@drawable/bg_btn_def_xml">

                <ImageView
                    android:id="@+id/fmi_iv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dip"
                    android:src="@drawable/ic_me_ask" />

                <TextView
                    style="@style/Text.Large1.black"
