<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_def"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/fmi_rl_top"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:background="@color/bg_title">

            <TextView
                android:id="@+id/fmi_title"
                style="@style/Text.Large.White"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dip"
                android:gravity="center_horizontal"
                android:text="@string/me" />

            <ImageView
                android:id="@+id/fmi_iv_head"
                android:layout_width="63dip"
                android:layout_height="63dip"
                android:layout_below="@+id/fmi_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dip"
                android:src="@drawable/ic_tem_head" />

            <ImageView
                android:id="@+id/fmi_iv_hea_mask"
                android:layout_width="63dip"
                android:layout_height="63dip"
                android:layout_below="@+id/fmi_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dip"
                android:src="@drawable/ic_me_head_mask" />

            <TextView
                android:id="@+id/fmi_tv_login"
                style="@style/Text.Large.White"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fmi_iv_head"
                android:layout_marginTop="20dip"
                android:gravity="center_horizontal"
                android:text="登录" />

            <RelativeLayout
                android:id="@+id/fmi_rl_nick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fmi_iv_head"
                android:layout_marginTop="20dip"
                android:visibility="gone">

                <TextView
                    android:id="@+id/zw"
                    android:layout_width="1dip"
                    android:layout_height="15dip"
                    android:layout_centerInParent="true"
                    android:background="@color/white"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/fmi_tv_nick"
                    style="@style/Text.Large.White"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/zw"
                    android:gravity="center_horizontal"
                    android:text="" />

                <TextView
                    android:id="@+id/fmi_tv_phone"
                    style="@style/Text.Large.White"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/zw"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fmi_rl_top"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
