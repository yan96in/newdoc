<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_def"
    android:clickable="true">

    <com.dadao.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height" />

    <RelativeLayout
        android:id="@+id/fdrl_rl_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_bar"
        android:background="@color/stoke_dark"
        android:paddingBottom="8dip"
        android:paddingTop="8dip">

        <TextView
            android:id="@+id/fdrl_tv_position"
            style="@style/Text.Mid1.gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="44dip"
            android:layout_marginRight="44dip"
            android:layout_marginTop="8dip"
            android:background="@drawable/bg_input_0_xml"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="14dip"
            android:gravity="center_vertical"
            android:paddingBottom="5dip"
            android:paddingLeft="24dip"
            android:paddingTop="5dip"
            android:text="定位中..." />

        <TextView
            android:id="@+id/fdrl_btn_position"
            style="@style/Text.Mid1.White"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dip"
            android:layout_marginRight="44dip"
            android:layout_marginTop="8dip"
            android:background="@drawable/bg_btn_change_location_xml"
            android:gravity="center"
            android:lineSpacingExtra="-3dip"
            android:padding="1dip"
            android:scrollX="-5dip"
            android:text="切换\n位置" />
    </RelativeLayout>

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fdrl_rl_position"
        android:clickable="true" />

    <RelativeLayout
        android:id="@+id/fdrl_rl_content"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fdrl_rl_position"
        android:background="@color/bg_def"
        android:visibility="gone">

        <RadioGroup
            android:id="@+id/fdrl_rg_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="15dip"
            android:paddingTop="15dip">

            <RadioButton
                android:id="@+id/fdrl_rb_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawableLeft="@drawable/ic_mask"
                android:gravity="center"
                android:paddingLeft="50dip"
                android:paddingRight="50dip"
                android:text="诊室"
                android:textColor="@drawable/blue_tabbargray_reverse_drawable"
                android:textSize="@dimen/ts_large1" />

            <RadioButton
                android:id="@+id/fdrl_rb_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@android:color/transparent"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@drawable/ic_recommend"
                android:gravity="center"
                android:paddingLeft="50dip"
                android:paddingRight="50dip"
                android:text="推荐"
                android:textColor="@drawable/blue_tabbargray_reverse_drawable"
                android:textSize="@dimen/ts_large1" />
        </RadioGroup>

        <TextView
            android:layout_width="1dip"
            android:layout_height="30dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"
            android:background="@color/stoke_dark" />

        <cn.smilecity.viewpagerindicator.UnderlinePageIndicator
            android:id="@+id/fdrl_indicator"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/fdrl_rg_info"
            android:layout_marginTop="-1dip"
            android:background="@null" />

        <android.support.v4.view.ViewPager
            android:id="@+id/fdrl_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/fdrl_indicator" />
    </RelativeLayout>

