<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="40dip">

    <ImageView
        android:id="@+id/im_item_head"
        android:layout_width="36dip"
        android:layout_height="36dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/ic_tem_head" />

    <TextView
        android:id="@+id/im_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/im_item_head"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/im_item_head"
        android:text="2014-02-01 12:23:12"
        android:textColor="@color/text_gray2"
        android:textSize="@dimen/ts_small" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/im_item_time"
        android:layout_marginBottom="10dip"
        android:layout_marginRight="5dip"
        android:layout_toLeftOf="@+id/im_item_head"
        android:background="@drawable/im_friend_bg"
        android:padding="7dip">

        <ImageView
            android:id="@+id/im_item_content_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:background="@null" />
    </RelativeLayout>

</RelativeLayout><!-- From: file:/C:/Users/Jiancheng/Desktop/newdoc9/newdoc/src/main/res/layout/itm_chat_me_img.xml -->