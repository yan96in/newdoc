<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/ih_rl_title"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/bg_item_xml">

        <ImageView
            android:id="@+id/fmi_iv_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dip"
            android:src="@drawable/ic_me_list" />

        <TextView
            android:id="@+id/ih_tv_title"
            style="@style/Text.Large1.black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/fmi_iv_6"
            android:text="病例001" />

        <ImageView
            android:id="@+id/ih_iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dip"
            android:src="@drawable/ic_right" />

        <TextView
            android:id="@+id/ih_tv_date"
            style="@style/Text.Mid0.darkgray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@+id/ih_iv_right"
            android:text="2015-2-3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_alignParentBottom="true"
            android:background="@color/stoke_light" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ih_rl_title"
        android:background="@color/bg_def">

        <TextView
            android:id="@+id/ih_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="病例内容" />
    </RelativeLayout>

</RelativeLayout><!-- From: file:/C:/Users/Jiancheng/Desktop/newdoc9/newdoc/src/main/res/layout/item_history.xml -->