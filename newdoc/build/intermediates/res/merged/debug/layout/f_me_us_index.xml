<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_def"
    android:clickable="true">

    <com.dadao.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height" />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_bar"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/fmui_rl_head"
            android:layout_width="match_parent"
            android:layout_height="128dip"
            android:background="@color/white" >

            <ImageView
                android:id="@+id/fmui_iv_logo"
                android:layout_width="74dip"
                android:layout_height="74dip"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dip"
                android:src="@drawable/ic_logo" />

            <TextView
                android:id="@+id/fmui_tv_version"
                style="@style/Text.Mid1.darkgray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fmui_iv_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dip"
                android:layout_marginTop="15dip"
                android:text="新医诊室" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_alignParentBottom="true"
                android:background="@color/stoke_dark" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fmui_rl_feedback"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginTop="30dip"
            android:background="@drawable/bg_btn_def_xml" >

            <TextView
                style="@style/Text.Large1.black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:text="意见反馈" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dip"
                android:src="@drawable/ic_right" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_alignParentBottom="true"
                android:background="@color/stoke_light" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fmui_rl_phone"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/bg_btn_def_xml" >

            <TextView
                style="@style/Text.Large1.black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:text="联系客服" />

            <TextView
                style="@style/Text.Mid1.blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dip"
                android:src="@drawable/ic_right"
                android:text="400 800 490000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_alignParentBottom="true"
                android:background="@color/stoke_light" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fmui_rl_agreement"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/bg_btn_def_xml" >

            <TextView
                style="@style/Text.Large1.black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:text="服务协议" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dip"
                android:src="@drawable/ic_right" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_alignParentBottom="true"
                android:background="@color/stoke_light" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fmui_rl_statement"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/bg_btn_def_xml" >

            <TextView
                style="@style/Text.Large1.black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:text="免责声明" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dip"
                android:src="@drawable/ic_right" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_alignParentBottom="true"
                android:background="@color/stoke_light" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout><!-- From: file:/C:/Users/Jiancheng/Desktop/newdoc9/newdoc/src/main/res/layout/f_me_us_index.xml -->