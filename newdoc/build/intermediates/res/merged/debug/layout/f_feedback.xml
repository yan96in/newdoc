<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">

    <com.dadao.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height" />

    <EditText
        android:id="@+id/ff_et_content"
        style="@style/Text.Mid1.darkgray"
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:layout_below="@+id/title_bar"
        android:layout_marginTop="15dip"
        android:background="@color/stoke_dark"
        android:gravity="left|top"
        android:hint="编辑评论"
        android:inputType="textMultiLine"
        android:paddingBottom="10dip"
        android:paddingLeft="30dip"
        android:paddingRight="30dip"
        android:paddingTop="10dip" />

    <RatingBar
        android:id="@+id/ff_rb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ff_et_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip" />

    <Button
        android:id="@+id/ff_btn_ok"
        style="@style/Text.Large.White"
        android:layout_width="wrap_content"
        android:layout_height="35dip"
        android:layout_below="@+id/ff_rb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dip"
        android:background="@drawable/bg_btn_xml"
        android:paddingLeft="32dip"
        android:paddingRight="32dip"
        android:text="确定" />

</RelativeLayout><!-- From: file:/C:/Users/Jiancheng/Desktop/newdoc9/newdoc/src/main/res/layout/f_feedback.xml -->