<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_wrap"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iq_iv_head"
        android:layout_width="63dip"
        android:layout_height="63dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:src="@drawable/ic_tem_head" />

    <ImageView
        android:id="@+id/iq_iv_hea_mask"
        android:layout_width="63dip"
        android:layout_height="63dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:src="@drawable/ic_mask_2" />

    <TextView
        android:id="@+id/iq_tv_name"
        style="@style/Text.Mid0.darkgray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@+id/iq_iv_hea_mask"
        android:gravity="left"
        android:text="张三" />

    <TextView
        android:id="@+id/iq_tv_time"
        style="@style/Text.Mid1.lightgray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dip"
        android:layout_marginTop="10dip"
        android:gravity="left"
        android:text="2015-11-6" />

    <TextView
        android:id="@+id/iq_tv_content"
        style="@style/Text.Mid0.darkgray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iq_tv_name"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@+id/iq_iv_hea_mask"
        android:gravity="left"
        android:text="01.xxxx" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="18dip"
        android:src="@drawable/ic_right" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@color/stoke_dark" />

</RelativeLayout>