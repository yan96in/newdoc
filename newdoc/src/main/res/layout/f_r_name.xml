<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_def"
    android:clickable="true">

    <com.dadao.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height" />

    <EditText
        android:id="@+id/frn_name"
        style="@style/Text.Large1.darkgray"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_below="@+id/title_bar"
        android:background="@color/white"
        android:drawableLeft="@drawable/ic_id"
        android:drawablePadding="15dip"
        android:hint="编辑昵称"
        android:paddingLeft="18dip" />

    <TextView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_below="@+id/frn_name"
        android:background="@color/stoke_dark" />

    <Button
        android:id="@+id/frn_btn_ok"
        style="@style/Text.Large.White"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_below="@+id/line2"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/bg_btn_blue_xml"
        android:text="确定" />

</RelativeLayout>