<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_def"
    android:paddingBottom="8dip"
    android:paddingLeft="8dip"
    android:paddingRight="8dip"
    android:paddingTop="0dip">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_item_xml"
        android:paddingBottom="0dip"
        android:paddingLeft="0.3dip"
        android:paddingRight="0.3dip"
        android:paddingTop="3dip" >

        <ImageView
            android:id="@+id/ir_iv_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="12dip"
            android:background="@drawable/ic_mask" />

        <TextView
            android:id="@+id/ir_tv_name"
            style="@style/Text.Large.Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="12dip"
            android:layout_toRightOf="@+id/ir_iv_room"
            android:text="xxxx诊室" />

        <Button
            android:id="@+id/ir_btn_bound"
            style="@style/Text.Small.White"
            android:layout_width="wrap_content"
            android:layout_height="18dip"
            android:layout_alignBottom="@+id/ir_tv_name"
            android:layout_marginLeft="32dp"
            android:layout_toRightOf="@+id/ir_tv_name"
            android:background="@drawable/bg_btn_green_xml"
            android:drawableLeft="@drawable/ic_bound"
            android:drawablePadding="4dip"
            android:paddingLeft="6dip"
            android:paddingRight="10dip"
            android:text="绑定诊室"
            android:textSize="8dip" />

        <TextView
            android:id="@+id/ir_tv_functions"
            style="@style/Text.Mid1.darkgray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ir_tv_name"
            android:layout_marginLeft="18dip"
            android:layout_toRightOf="@+id/ir_iv_room"
            android:text="主治：xxxxxxxx" />

        <TextView
            android:id="@+id/ir_line"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/ir_tv_functions"
            android:layout_marginTop="15dip"
            android:background="@color/stoke_light" />

        <TextView
            android:id="@+id/ir_zw"
            android:layout_width="1dip"
            android:layout_height="40dip"
            android:layout_below="@+id/ir_line"
            android:layout_centerHorizontal="true"
            android:background="@color/stoke_light"
            android:paddingBottom="-8dip" />

        <ImageView
            android:id="@+id/ir_iv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ir_line"
            android:layout_marginLeft="24dip"
            android:layout_marginTop="12dip"
            android:background="@drawable/ic_location" />

        <TextView
            android:id="@+id/ir_tv_location"
            style="@style/Text.Mid1.lightgray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ir_line"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="12dip"
            android:layout_toLeftOf="@+id/ir_zw"
            android:layout_toRightOf="@+id/ir_iv_location"
            android:text="xxxxx街道xxx号" />

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_below="@+id/ir_line"
            android:layout_toRightOf="@+id/ir_zw" >

            <Button
                android:id="@+id/ir_btn_speak"
                style="@style/Text.Mid0.White"
                android:layout_width="wrap_content"
                android:layout_height="24dip"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_btn_xml"
                android:paddingLeft="12dip"
                android:paddingRight="12dip"
                android:text="进入诊室" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>