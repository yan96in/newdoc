<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="40dip">

    <ImageView
        android:id="@+id/im_item_head"
        android:layout_width="36dip"
        android:layout_height="36dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="5dip"
        android:src="@drawable/ic_tem_head" />

    <TextView
        android:id="@+id/im_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/im_item_head"
        android:layout_marginLeft="15dip"
        android:layout_toRightOf="@+id/im_item_head"
        android:text="2014-02-01 12:23:12"
        android:textColor="@color/text_gray2"
        android:textSize="@dimen/ts_small" />

    <ImageView
        android:id="@+id/im_item_content_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/im_item_time"
        android:layout_below="@+id/im_item_time"
        android:layout_marginBottom="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/im_me_bg"
        android:padding="10dip" />

</RelativeLayout>