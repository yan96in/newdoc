<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">

    <TextView
        android:id="@+id/fdrdcm_tv_line"
        android:layout_width="1dip"
        android:layout_height="match_parent"
        android:background="@color/stoke_light" />

    <TextView
        android:id="@+id/fdrdcm_tv_title"
        style="@style/Text.Large1.darkgray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dip"
        android:layout_marginTop="15dip"
        android:text="患者对医生的评价" />

    <EditText
        android:id="@+id/fdrdcm_et_comments"
        style="@style/Text.Mid1.darkgray"
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:layout_below="@+id/fdrdcm_tv_title"
        android:layout_marginTop="15dip"
        android:background="@color/stoke_dark"
        android:gravity="left|top"
        android:hint="编辑评论"
        android:inputType="textMultiLine"
        android:paddingBottom="10dip"
        android:paddingLeft="30dip"
        android:paddingRight="30dip"
        android:paddingTop="10dip" />

    <Button
        android:id="@+id/fdrdcm_btn_comments"
        style="@style/Text.Large.White"
        android:layout_width="wrap_content"
        android:layout_height="35dip"
        android:layout_below="@+id/fdrdcm_et_comments"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dip"
        android:background="@drawable/bg_btn_xml"
        android:paddingLeft="32dip"
        android:paddingRight="32dip"
        android:text="确定" />

</RelativeLayout>