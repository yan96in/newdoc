<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ic_iv_head"
        android:layout_width="42dip"
        android:layout_height="42dip"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="18dip"
        android:background="@drawable/ic_tem_head" />

    <TextView
        android:id="@+id/ic_tv_name"
        style="@style/Text.Mid1.darkgray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dip"
        android:layout_marginTop="18dip"
        android:layout_toRightOf="@+id/ic_iv_head"
        android:gravity="center_vertical"
        android:text="张三" />

    <TextView
        android:id="@+id/ic_tv_time"
        style="@style/Text.Mid1.darkgray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dip"
        android:layout_marginTop="18dip"
        android:layout_toRightOf="@+id/ic_tv_name"
        android:gravity="center_vertical"
        android:text="2015-1-3 10:10" />

    <TextView
        android:id="@+id/ic_tv_content"
        style="@style/Text.Mid1.darkgray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ic_tv_name"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@+id/ic_iv_head"
        android:gravity="center_vertical"
        android:text="可是时间无法抹去任何事，只是深刻了记忆的划痕。" />

    <TextView
        android:id="@+id/ic_line"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@+id/ic_tv_content"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="10dip"
        android:background="@color/stoke_light" />

</RelativeLayout>